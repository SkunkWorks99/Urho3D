<renderpath>
	<rendertarget name="hdr" rtsizedivisor="1 1" format="rgba16f" />
    <rendertarget name="hdrcopy" sizedivisor="1 1" format="rgba16f" />
    <rendertarget name="depth" rtsizedivisor="1 1" format="lineardepth" />
    <command type="clear" color="1 1 1 1" depth="1.0" output="depth" />
    <command type="quad" vs="CopyFrameBuffer" ps="CopyFrameBuffer" output="hdr">
        <texture unit="diffuse" name="viewport" />
    </command>
    <command type="scenepass" pass="depth" output="depth" />
    <command type="clear" color="fog" depth="1.0" stencil="0" />
    <command type="scenepass" pass="base" vertexlights="true" metadata="base" />
    <command type="forwardlights" pass="light" output="hdr" />
    <command type="scenepass" pass="prealpha" output="hdr" />
    <command type="scenepass" pass="alpha" usescissor="true" vertexlights="true" sort="backtofront" metadata="alpha" output="hdr" />
    <command type="scenepass" pass="postalpha" sort="backtofront" output="hdr" />
    <command type="quad" tag="HDRCopyToViewport" vs="CopyFrameBuffer" ps="CopyFrameBuffer" output="viewport">
        <texture unit="diffuse" name="hdr" />
    </command>
</renderpath>