<renderpath>
    <rendertarget name="hdr" rtsizedivisor="1 1" format="rgba16f" />
    <rendertarget name="albedo" rtsizedivisor="1 1" format="rgba" />
    <rendertarget name="normal" rtsizedivisor="1 1" format="rgba" />
    <rendertarget name="depth" rtsizedivisor="1 1" format="lineardepth" />
    <command type="clear" color="fog" depth="1.0" stencil="0" />
    <command type="quad" vs="CopyFrameBuffer" ps="CopyFrameBuffer" output="hdr">
        <texture unit="diffuse" name="viewport" />
    </command>
    <command type="scenepass" pass="deferred" marktostencil="true" vertexlights="true" metadata="gbuffer">
        <output index="0" name="hdr" />
        <output index="1" name="albedo" />
        <output index="2" name="normal" />
        <output index="3" name="depth" />
    </command>
    <command type="lightvolumes" vs="DeferredLight" ps="DeferredLight">
        <output index="0" name="hdr" />
        <texture unit="albedo" name="albedo" />
        <texture unit="normal" name="normal" />
        <texture unit="depth" name="depth" />
    </command>
    <command type="scenepass" pass="prealpha">
        <output index="0" name="hdr" />
    </command>
    <command type="scenepass" pass="alpha" usescissor="true" vertexlights="true" sort="backtofront" metadata="alpha">
        <output index="0" name="hdr" />
    </command>
    <command type="scenepass" pass="postalpha" sort="backtofront">
        <output index="0" name="hdr" />
    </command>
    <command type="quad" tag="HDRCopyToViewport" vs="CopyFrameBuffer" ps="CopyFrameBuffer" output="viewport">
        <texture unit="diffuse" name="hdr" />
    </command>
</renderpath>
